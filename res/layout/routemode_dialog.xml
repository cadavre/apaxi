<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlDialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvHeader3954"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/gray"
        android:gravity="center"
        android:text="mode"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tvHeader3954"
        android:background="@color/cream"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/btnCity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:src="@drawable/btn_mode_city" />

        <ImageView
            android:id="@+id/btnMixed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:src="@drawable/btn_mode_mixed" />

        <ImageView
            android:id="@+id/btnHighway"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:src="@drawable/btn_mode_highway" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnDoneRoute"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_cancel" />

</RelativeLayout>